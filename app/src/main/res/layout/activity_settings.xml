<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8E3E9"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/btn_back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/outline_arrow_back_24"
            android:contentDescription="Back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:background="@drawable/card_background">

            <TextView
                android:id="@+id/tvUsernameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Username: "
                android:textStyle="bold"
                android:textColor="#0B2E33"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:textColor="#0B2E33"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="#0B2E33"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:textSize="15sp"
                android:padding="10dp"
                android:background="#93B1B5"
                android:textColor="#0B2E33"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="6dp"> <LinearLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginEnd="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#93B1B5"
                    android:layout_margin="6dp" />

                <TextView
                    android:id="@+id/setting_song1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Song 1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#0B2E33"
                    android:textSize="16sp" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#93B1B5"
                        android:layout_margin="6dp" />

                    <TextView
                        android:id="@+id/setting_song2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Song 2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#0B2E33"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#93B1B5"
                        android:layout_margin="6dp" />

                    <TextView
                        android:id="@+id/setting_song3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Song 3"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#0B2E33"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#0B2E33"
                android:text="Save Changes"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#4F7C82"
            android:text="Change Account Password"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>