<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8E3E9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Add empty space to push everything down -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_previous"
                android:tint="#0B2E33"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/textHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Song Details"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#0B2E33"
                android:gravity="center" />
        </LinearLayout>

        <!-- Larger space before card -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <!-- Centered Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#E5F5F8"
            android:padding="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageAlbumArt"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp" />

            <!-- TITLE (centered) -->
            <TextView
                android:id="@+id/textSongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textColor="#0B2E33"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- ARTIST (centered, with By:) -->
            <TextView
                android:id="@+id/textArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By: Artist Name"
                android:textColor="#0B2E33"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- ALBUM (centered) -->
            <TextView
                android:id="@+id/textAlbumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Album: Album Name"
                android:textColor="#0B2E33"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Duration (already fine) -->
            <TextView
                android:id="@+id/textDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 3:23"
                android:textColor="#0B2E33"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <!-- Explicit (already fine) -->
            <TextView
                android:id="@+id/textExplicit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explicit: No"
                android:textColor="#0B2E33"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>