<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8E3E9"
    android:fitsSystemWindows="true"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/guestContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/tvGuestMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up to search and add friends."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0B2E33"
            android:gravity="center"
            android:padding="16dp"/>

        <Button
            android:id="@+id/btnExitGuestFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit Guest / Log In"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#0B2E33"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvFriendsHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search for users to add as friends."
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#0B2E33"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search username, song, artist, or album"
        android:inputType="text"
        android:maxLines="1"
        android:drawableStart="@android:drawable/ic_search_category_default"
        android:drawablePadding="8dp"
        android:textColor="#0B2E33"
        android:textColorHint="#5A888D"
        android:background="@drawable/edit_text_background"
        android:elevation="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFriendsHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/rgSearchMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbModeUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users"
            android:checked="true"
            android:textColor="#0B2E33"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:buttonTint="#4F7C82"/>

        <RadioButton
            android:id="@+id/rbModeMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textColor="#0B2E33"
            android:textStyle="bold"
            android:buttonTint="#4F7C82"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnRecommendedFriends"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recommended Friends"
        android:backgroundTint="#4F7C82"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/rgSearchMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFriends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnRecommendedFriends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>