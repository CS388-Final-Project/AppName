<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B8E3E9"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/guestContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Mode"
            android:textColor="#0B2E33"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <Button
            android:id="@+id/btnExitGuestFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sign In to Connect"
            android:backgroundTint="#0B2E33"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search users or music..."
        android:layout_marginTop="50dp"
        android:inputType="text"
        android:maxLines="1"
        android:drawableStart="@android:drawable/ic_search_category_default"
        android:drawablePadding="8dp"
        android:textColor="#0B2E33"
        android:textColorHint="#5A888D"
        android:background="@drawable/edit_text_background"
        android:elevation="2dp"
        android:layout_marginBottom="12dp" />

    <RadioGroup
        android:id="@+id/rgSearchMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rbModeUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users"
            android:textColor="#0B2E33"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:buttonTint="#4F7C82"/>

        <RadioButton
            android:id="@+id/rbModeMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textColor="#0B2E33"
            android:textStyle="bold"
            android:buttonTint="#4F7C82"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tvFriendsHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for users to add as friends."
        android:textSize="18sp"
        android:textColor="#0B2E33"
        android:textStyle="italic"
        android:paddingBottom="12dp"
        tools:text="Users who posted music matching 'rock'"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        tools:itemCount="5"
        tools:listitem="@layout/item_friend_list" />

</LinearLayout>