<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8E3E9"
    android:fitsSystemWindows="true">

    <!-- GUEST MODE UI -->
    <LinearLayout
        android:id="@+id/guestContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvGuestMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up to search and add friends."
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"/>

        <Button
            android:id="@+id/btnExitGuestFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit Guest / Log In"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#0B2E33"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Dynamic hint / status text -->
    <TextView
        android:id="@+id/tvFriendsHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search for friends"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search bar -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search username, song, artist, or album"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvFriendsHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Toggle between searching users vs music -->
    <RadioGroup
        android:id="@+id/rgSearchMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbModeUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbModeMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music" />
    </RadioGroup>

    <!-- Results list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFriends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rgSearchMode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
