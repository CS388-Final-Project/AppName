<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8E3E9"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- SETTINGS + LOG OUT ROW -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_settings_24"
                app:tint="@color/black" />

        </LinearLayout>

        <!-- MAIN COLUMN -->
        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="16dp"
            android:layout_below="@id/topBar">

            <!-- PROFILE IMAGE -->
            <ImageView
                android:id="@+id/imgProfilePhoto"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="0dp"
                android:contentDescription="Profile photo"
                android:padding="0dp"
                android:src="@drawable/outline_account_circle_24" />

            <!-- CHANGE PHOTO -->
            <Button
                android:id="@+id/btnChangePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Photo"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4F7C82"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp" />

            <!-- USER INFO CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:background="@drawable/card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"
                    android:textColor="#0B2E33"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:background="#93B1B5"
                    android:textColor="#0B2E33"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="#0B2E33"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:background="#93B1B5"
                    android:textColor="#0B2E33"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- SPOTIFY CONNECT BUTTON (shown when not connected) -->
            <Button
                android:id="@+id/btnConnectSpotifyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect Spotify"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                android:backgroundTint="#1DB954"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#0B2E33"
                android:text="Log Out"
                android:textColor="#FFFFFF" />

            <!-- SPOTIFY SECTION (shown when connected) -->
            <LinearLayout
                android:id="@+id/layoutTopTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <!-- Spotify header: avatar + name -->
                <LinearLayout
                    android:id="@+id/spotifyHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgSpotifyAvatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/outline_account_circle_24"
                        android:contentDescription="Spotify avatar" />

                    <TextView
                        android:id="@+id/tvSpotifyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spotify Connected"
                        android:layout_marginStart="8dp"
                        android:textColor="#0B2E33"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Top tracks row -->
                <LinearLayout
                    android:id="@+id/topTracksRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Track 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgTrack1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#CCCCCC"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/tvTrack1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="#0B2E33"
                            android:textSize="13sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Track 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgTrack2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#CCCCCC"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/tvTrack2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="#0B2E33"
                            android:textSize="13sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- Track 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgTrack3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#CCCCCC"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/tvTrack3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="#0B2E33"
                            android:textSize="13sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>