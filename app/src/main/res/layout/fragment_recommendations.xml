<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8E3E9"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <TextView
        android:id="@+id/tvRecommendationsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Music Recommendations"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#0B2E33"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content container -->
    <LinearLayout
        android:id="@+id/recommendationsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecommendationsHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CARD 1: Top Songs -->
        <LinearLayout
            android:id="@+id/cardTopSongs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4F7C82"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTopSongsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top Songs from Your Circle"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvTopSongsSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="@color/white"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:paddingTop="12dp" />
            </LinearLayout>

            <!-- Arrow indicator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="›"
                android:textSize="32sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingStart="8dp" />

        </LinearLayout>

        <!-- CARD 2: Top Artists -->
        <LinearLayout
            android:id="@+id/cardTopArtists"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4F7C82"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTopArtistsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top Artists from Your Circle"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvTopArtistsSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:paddingTop="12dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="›"
                android:textSize="32sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingStart="8dp" />

        </LinearLayout>

        <!-- CARD 3: Location -->
        <LinearLayout
            android:id="@+id/cardTopLocation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:backgroundTint="#4F7C82"
            android:padding="20dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTopLocationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top Songs Near You"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvTopLocationSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:textAlignment="viewStart"
                    android:paddingTop="12dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="›"
                android:textSize="32sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingStart="8dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>