<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <!-- Comment card with rounded corners -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        android:backgroundTint="#4F7C82">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Main content container -->
            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@id/btnDeleteComment"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp">

                <!-- Username and Comment Text Combined -->
                <TextView
                    android:id="@+id/tvCommentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username: This is a comment"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/tvCommentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <!-- Delete button (aligned to right, inside card) -->
            <ImageView
                android:id="@+id/btnDeleteComment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/outline_delete_24"
                android:contentDescription="Delete comment"
                android:padding="8dp"
                android:visibility="gone"
                android:tint="#FF0000"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>