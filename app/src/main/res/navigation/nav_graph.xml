<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/feedFragment">

    <!-- FEED -->
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.cs388finalproject.FeedFragment"
        android:label="Feed" />

    <!-- RECOMMENDATIONS -->
    <fragment
        android:id="@+id/recommendationsFragment"
        android:name="com.example.cs388finalproject.RecommendationsFragment"
        android:label="Recommendations">
    </fragment>

    <!-- FRIENDS -->
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.example.cs388finalproject.FriendsFragment"
        android:label="Friends" />

    <!-- PROFILE -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cs388finalproject.ProfileFragment"
        android:label="Profile" />

    <!-- RECOMMENDATIONS LIST SCREEN -->
    <fragment
        android:id="@+id/recommendationsListFragment"
        android:name="com.example.cs388finalproject.RecommendationsListFragment"
        android:label="Recommendation List">

        <argument
            android:name="title"
            app:argType="string" />

        <argument
            android:name="items"
            app:argType="string[]" />
    </fragment>
</navigation>